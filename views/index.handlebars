<h1>GROCERY LIST</h1>
<div id="center">
<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
  <h2>Add an Item</h2>
    <label for="burg">Name:</label><br>
    <input type="text" id="burg" name="burger_name">
  </div>

  <div class="form-group">
    <input type="radio" name="devoured" value="1" checked>Purchased<br>
    <input type="radio" name="devoured" value="0"> Need to Purchase
        <br>
  </div>

  <button type="submit">ADD ITEM</button>
</form>
</div>


<ul id="left">
<h2>Items To Purchase</h2>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Buy Now</button>
        </form>

         <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
  
  <button type="submit">Delete</button>
</form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<ul id="right">
<h2>Purchased</h2>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Need To Buy Again</button>
        </form>

        <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
  
  <button type="submit">Delete</button>
</form>
      </li>
    {{/if}}
  {{/each}}
</ul>

