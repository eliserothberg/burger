
<h1>BURGERS!</h1>
<img src="../assets/img/burger.png"/>
<div id="center">

<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
  <h2>Add A Burger!</h2>
    <label for="burg">Name:</label><br>
    <input type="text" id="burg" name="burger_name">
  </div>

  <div class="form-group">
    <input type="radio" name="devoured" value="1" checked> Put in my belly!<br>
    <input type="radio" name="devoured" value="0"> Not in my belly.
        <br>
  </div>

  <button type="submit">ADD</button>
</form>
</div>


<ul id="left">
<h2>Burgers Not In My Belly.</h2>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Put In My Belly!</button>
        </form>

         <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
  
  <button type="submit">Delete</button>
</form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<ul id="right">
<h2>Burgers In My Belly.</h2>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Was In My Belly.</button>
        </form>

        <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
  
  <button type="submit">Delete</button>
</form>
      </li>
    {{/if}}
  {{/each}}
</ul>
